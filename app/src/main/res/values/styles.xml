<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <style name="text_tier_blue" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_text</item>
        <item name="android:fontFamily">@font/roboto_boldcondensed</item>
    </style>

    <style name="text_tier_grey" parent="@android:style/TextAppearance">
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/grey</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>

    <style name="text_fighter_white" parent="@android:style/TextAppearance">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="text_toolbar" parent="@android:style/TextAppearance">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>

    <style name="collapsing_tb_expanded">
        <item name="android:textSize">50sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:elevation">-2dp</item>
    </style>

    <style name="collapsing_tb_collapsed">
        <item name="android:textSize">30sp</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/yellow</item>
    </style>
</resources>
