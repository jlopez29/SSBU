<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/cl_stat_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/app_bar"
            android:layout_width="match_parent"
            android:layout_height="275dp"
            android:fitsSystemWindows="true"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:theme="@style/AppTheme">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:id="@+id/ctbl_character_stats"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/colorPrimary"
                android:fitsSystemWindows="true"
                app:title="Villager"
                app:expandedTitleGravity="center|top"
                app:expandedTitleTextAppearance="@style/collapsing_tb_expanded"
                app:collapsedTitleGravity="center"
                app:collapsedTitleTextAppearance="@style/collapsing_tb_collapsed"
                app:contentScrim="?attr/colorPrimary"
                app:layout_scrollFlags="scroll|exitUntilCollapsed"
                app:scrimVisibleHeightTrigger="200dp"
                android:clipChildren="false"
                app:toolbarId="@+id/toolbar">

                <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/bg_stats_circle"
                    app:layout_collapseMode="parallax"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_character_image"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:src="@drawable/img_villager"
                    app:layout_collapseMode="parallax"
                    android:layout_gravity="center_horizontal|bottom" />

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    app:contentInsetStart="0dp"
                    app:contentInsetLeft="0dp"
                    app:layout_collapseMode="parallax"/>

            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">
                <LinearLayout
                    android:id="@+id/cl_character_stat_container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">


                    <LinearLayout
                        android:id="@+id/ll_overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/ll_character_stats_overview"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_margin"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:paddingTop="@dimen/tiny_margin"
                            android:paddingBottom="@dimen/tiny_margin"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent">
                            <ImageView
                                android:id="@+id/iv_overview_pill"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                />

                            <TextView
                                android:id="@+id/tv_overview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Overview"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:fontFamily="@font/roboto_medium"
                                android:layout_marginStart="@dimen/default_margin"
                                />
                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cl_character_stat_overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@id/ll_character_stats_overview">
                        <LinearLayout
                            android:id="@+id/ll_character_tags"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginStart="@dimen/default_margin"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:paddingTop="@dimen/tiny_margin"
                            android:paddingBottom="@dimen/tiny_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            app:layout_constraintTop_toTopOf="parent">


                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_character_series"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/blue_dark2"
                                app:contentPaddingTop="@dimen/small_margin"
                                app:contentPaddingBottom="@dimen/small_margin"
                                app:contentPaddingRight="@dimen/default_margin"
                                app:contentPaddingLeft="@dimen/default_margin"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="5dp">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <ImageView
                                        android:id="@+id/iv_character_series_icon"
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        android:src="@drawable/ic_doubutsu"
                                        android:layout_alignTop="@id/tv_series_name"
                                        android:layout_alignBottom="@id/tv_series_name"/>

                                    <TextView
                                        android:id="@+id/tv_series_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="Animal Crossing"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/roboto_medium"
                                        android:layout_toEndOf="@id/iv_character_series_icon"/>
                                </RelativeLayout>
                            </com.google.android.material.card.MaterialCardView>

                            <com.google.android.material.card.MaterialCardView
                                android:id="@+id/cv_character_tier"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@color/blue_dark2"
                                app:contentPaddingTop="@dimen/small_margin"
                                app:contentPaddingBottom="@dimen/small_margin"
                                app:contentPaddingRight="@dimen/default_margin"
                                app:contentPaddingLeft="@dimen/default_margin"
                                app:cardElevation="0dp"
                                app:cardCornerRadius="5dp"
                                android:layout_marginStart="@dimen/default_margin">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <TextView
                                        android:id="@+id/iv_character_tier_icon"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="E"
                                        android:textColor="@color/blue_text"
                                        android:textStyle="bold"
                                        android:textAlignment="center"
                                        android:autoSizeTextType="uniform"
                                        android:layout_marginEnd="@dimen/small_margin"
                                        android:fontFamily="@font/roboto_boldcondensed"
                                        android:layout_alignTop="@id/tv_tier_name"
                                        android:layout_alignBottom="@id/tv_tier_name"/>

                                    <TextView
                                        android:id="@+id/tv_tier_name"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="TIER"
                                        android:textColor="@color/white"
                                        android:fontFamily="@font/roboto_medium"
                                        android:layout_toEndOf="@id/iv_character_tier_icon"/>
                                </RelativeLayout>
                            </com.google.android.material.card.MaterialCardView>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_character_description"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Super Smash Bros Ultimate Villager is from the Animal Crossing Series and ranks as a E Tier Pick (Below Average)."
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginStart="@dimen/default_margin"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:paddingTop="@dimen/tiny_margin"
                            android:paddingBottom="@dimen/tiny_margin"
                            android:layout_marginTop="@dimen/default_margin"
                            app:layout_constraintTop_toBottomOf="@id/ll_character_tags"
                            app:layout_constraintStart_toStartOf="parent"/>

                        <FrameLayout
                            android:id="@+id/fl_character_stats"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/tv_character_description">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/rv_character_stats"
                                android:layout_gravity="center_horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:nestedScrollingEnabled="false"
                                tools:listitem="@layout/item_character" />
                        </FrameLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ll_counters"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:id="@+id/ll_character_counters"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/default_margin"
                            android:layout_marginEnd="@dimen/default_margin"
                            android:paddingTop="@dimen/tiny_margin"
                            android:paddingBottom="@dimen/tiny_margin"
                            app:layout_constraintTop_toBottomOf="@id/cl_character_stat_overview"
                            app:layout_constraintStart_toStartOf="parent">
                            <ImageView
                                android:id="@+id/iv_counters_pill"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_gravity="center_vertical"
                                />

                            <TextView
                                android:id="@+id/tv_counters"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Counter Matchups"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:fontFamily="@font/roboto_medium"
                                android:layout_marginStart="@dimen/default_margin"
                                />
                        </LinearLayout>

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/cl_character_counters"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:animateLayoutChanges="true"
                            app:layout_constraintTop_toBottomOf="@id/ll_character_counters">

                            <TextView
                                android:id="@+id/tv_character_counters_description"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="The best character matchups for Villager, these are counter picks villager is weak against."
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_marginStart="@dimen/default_margin"
                                android:layout_marginEnd="@dimen/default_margin"
                                android:paddingTop="@dimen/tiny_margin"
                                android:paddingBottom="@dimen/tiny_margin"
                                android:layout_marginTop="@dimen/default_margin"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintStart_toStartOf="parent"/>

                            <FrameLayout
                                android:id="@+id/fl_character_counters"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:animateLayoutChanges="true"
                                app:layout_constraintTop_toBottomOf="@id/tv_character_counters_description">
                                <androidx.recyclerview.widget.RecyclerView
                                    android:id="@+id/rv_character_counters"
                                    android:layout_gravity="center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:nestedScrollingEnabled="false"
                                    android:layoutAnimation="@anim/character_animation"
                                    tools:listitem="@layout/item_character" />
                            </FrameLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </LinearLayout>

        </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>


</androidx.constraintlayout.widget.ConstraintLayout>